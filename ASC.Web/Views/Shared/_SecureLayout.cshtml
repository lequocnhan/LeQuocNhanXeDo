@{
    Layout = "_MasterLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Automobile Service Center</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <style>
        /* Định dạng chung */
        body {
            font-family: sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header */
        header {
            background-color: #607D8B; /* Màu xám */
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: white; /* Sidebar nền trắng */
            height: 100vh;
            position: fixed;
            overflow-y: auto;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        /* User View */
        .user-view {
            background-color: #455A64; /* Màu xám đậm */
            padding: 20px;
            text-align: center;
            color: white;
        }

            .user-view img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                margin-bottom: 10px;
            }

        .user-info {
            text-align: center;
        }

            .user-info .name {
                font-weight: bold;
                display: block;
            }

            .user-info .email {
                font-size: 14px;
                opacity: 0.8;
                display: block;
            }

        /* Danh sách menu */
        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar ul li a {
                display: block;
                padding: 12px 20px;
                color: black;
                text-decoration: none;
            }

                .sidebar ul li a:hover {
                    background-color: #f0f0f0;
                }

        /* Nội dung chính */
        main {
            flex: 1;
            padding: 20px;
            margin-left: 250px; /* Dịch sang phải để tránh sidebar */
        }

        /* Footer */
        footer {
            background-color: #455A64; /* Màu xám đậm */
            color: white;
            padding: 20px;
            text-align: center;
            margin-left: 250px; /* Đẩy footer sang phải */
        }

        .footer-columns {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

            .footer-columns div {
                flex: 1;
                min-width: 200px;
                margin: 10px;
                text-align: left;
            }

        footer a {
            color: white;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        Automobile Service Center
    </header>

    <div class="sidebar">
        <div class="user-view">
            <img src="~/images/male.png" alt="User Avatar">
            <div class="user-info">
                <span class="name">John Doe</span>
                <span class="email">jdandturk@gmail.com</span>
            </div>
        </div>
        <ul>
            <li><a href="#"><i class="material-icons">dashboard</i> Dashboard</a></li>
            <li>
                <a href="#"><i class="material-icons">supervisor_account</i> User Administration</a>
            </li>
            <ul>
                <li><a href="#"><i class="material-icons">account_box</i> Customers</a></li>
                <li><a href="#"><i class="material-icons">person_add</i> Provision User</a></li>
                <li><a href="#"><i class="material-icons">remove_circle</i> Deactivate User</a></li>
            </ul>
            <li><a href="#"><i class="material-icons">perm_data_setting</i> Service Requests</a></li>
            <li><a href="#"><i class="material-icons">message</i> Service Notifications</a></li>
            <li><a href="#"><i class="material-icons">inbox</i> Promotions</a></li>
            <li><a href="#"><i class="material-icons">settings</i> Settings</a></li>
            <li><a href="#"><i class="material-icons">exit_to_app</i> Logout</a></li>
        </ul>
    </div>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-columns">
            <div>
                <h5>About Us</h5>
                <p>Automobile Service Center is a certified company providing car services since 2010. Our dedication to customer satisfaction earned us the "Best Service" award in 2008.</p>
            </div>
            <div>
                <h5>Additional Services</h5>
                <ul>
                    <li><a href="#">Services</a></li>
                    <li><a href="#">Finance</a></li>
                    <li><a href="#">Used Cars</a></li>
                    <li><a href="#">Insurance</a></li>
                    <li><a href="#">Driving School</a></li>
                </ul>
            </div>
            <div>
                <h5>Connect</h5>
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">LinkedIn</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">YouTube</a></li>
                </ul>
            </div>
        </div>
        <p>Powered by <a href="http://materializecss.com">Materialize</a></p>
    </footer>
</body>
</html>
